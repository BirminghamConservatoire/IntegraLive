<modulecreatorconfig>

	<!--  integradeveloper is an easter-egg tag which allows the use of 'core' and 'implemented in libIntegra' settings -->
	  <!-- <integradeveloper/>	  -->

	<!--  bundlemaker is an easter-egg tag which switches on Module Creator's 'bundle maker' functionality   -->
	<!--  <bundlemaker/>	 --> 

	<!-- 		standard tags - these are presented in the combo box control as defaults						-->
	<standardtags>
		<standardtag>simple</standardtag>
		<standardtag>complex</standardtag>
		<standardtag>processing</standardtag>
		<standardtag>synthesis</standardtag>
		<standardtag>analysis</standardtag>
		<standardtag>delay</standardtag>
		<standardtag>filter</standardtag>
		<standardtag>spectral</standardtag>
		<standardtag>granular</standardtag>
		<standardtag>distortion</standardtag>
		<standardtag>dynamics</standardtag>
		<standardtag>resonance</standardtag>
		<standardtag>pitch</standardtag>
		<standardtag>panning</standardtag>
		<standardtag>reverb</standardtag>
		<standardtag>soundfile</standardtag>
		<standardtag>input</standardtag>
		<standardtag>output</standardtag>
	</standardtags>	


	<!--        configuration of paths 													-->
	<paths>

		<!--			windows-specific paths											-->
		<windows>
			<!--		path to template modules directory, relative to Module Creator	-->
			<templatespath>..\templates\</templatespath>
			<hostpath>..\..\host\bin\pd.exe</hostpath>
			<fileviewerpath>Windows\explorer.exe</fileviewerpath>
			<documentspath>..\..\documentation</documentspath>
			<integralivepath>..\..\gui\Integra Live.exe</integralivepath>
		</windows>
		
		<!--			mac-specific paths												-->
		<mac>
			<!--		path to template modules directory, relative to Module Creator	-->
            <templatespath>./templates/</templatespath>
			<hostpath>./Integra Live.app/Contents/Resources/host/bin/pd_integra</hostpath>
			<fileviewerpath>/usr/bin/open</fileviewerpath>
			<documentspath>./documentation</documentspath>			
			<integralivepath>./Integra Live.app/Contents/MacOS/Integra Live</integralivepath>
		</mac>
	</paths>

	<!-- 		arguments to be passed into host executable on startup							-->
	<hostargs>
		<hostarg>-noprefs</hostarg>
	</hostargs>	
	

	<!-- 		help links.  Can be web or local relative to documentation directory			-->
	<helplinks>
		<helplink name="Module Development Quick Start">
			html/module-development-quickstart/module-development-quickstart.htm
		</helplink>
		<helplink name="Module Development Guide">
			html/module-development-guide/module-development-guide.htm
		</helplink>
		<helplink name="Integra Live Website">
			http://www.integralive.org
		</helplink>
		<helplink name="User Forum...">
			http://integralive.org/forum
		</helplink>
	</helplinks>		
	
	
	
    <!--        available widgets:									-->
    <widgets>
        <widget name="Checkbox" minWidth="60" minHeight="85" defaultWidth="85" defaultHeight="85" maxWidth="90" maxHeight="120">
            <attribute>value</attribute>
        </widget>
        <widget name="DryWetBalance" minWidth="180" minHeight="180" defaultWidth="180" defaultHeight="180" maxWidth="200" maxHeight="200">
            <attribute>value</attribute>
        </widget>
        <widget name="EarlyLateBalance" minWidth="180" minHeight="180" defaultWidth="180" defaultHeight="180" maxWidth="200" maxHeight="200">
