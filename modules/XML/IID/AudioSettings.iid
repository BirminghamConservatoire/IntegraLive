    <Endpoint>
      <Name>bufferSize</Name>
      <Label>bufferSize</Label>
      <Description>Audio buffer size. This controls overall audio latency.</Description>
      <Type>control</Type>
      <ControlInfo>
        <ControlType>state</ControlType>
        <StateInfo>
          <StateType>integer</StateType>
          <IsSavedToFile>true</IsSavedToFile>
          <IsInputFile>false</IsInputFile>
          <Constraint>
            <Range>
              <Minimum>1</Minimum>
              <Maximum>100</Maximum>
            </Range>
          </Constraint>
          <Default>50</Default>
        </StateInfo>
        <CanBeSource>false</CanBeSource>
        <CanBeTarget>false</CanBeTarget>
        <IsSentToHost>true</IsSentToHost>
      </ControlInfo>
    </Endpoint>
    <Endpoint>
      <Name>sampleRate</Name>
      <Label>sampleRate</Label>
      <Description>The sample rate the software runs at</Description>
      <Type>control</Type>
      <ControlInfo>
        <ControlType>state</ControlType>
        <StateInfo>
          <StateType>integer</StateType>
          <IsSavedToFile>true</IsSavedToFile>
          <IsInputFile>false</IsInputFile>
          <Constraint>
            <AllowedStates>
              <State>11025</State>
              <State>22050</State>
              <State>44100</State>
              <State>48000</State>
              <State>96000</State>
              <State>192000</State>
            </AllowedStates>
          </Constraint>
          <Default>44100</Default>
        </StateInfo>
        <CanBeSource>false</CanBeSource>
        <CanBeTarget>false</CanBeTarget>
        <IsSentToHost>true</IsSentToHost>
      </ControlInfo>
    </Endpoint>
